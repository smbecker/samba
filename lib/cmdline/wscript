#!/usr/bin/env python

import os
import sys
from waflib import Logs

def build(bld):
    bld.SAMBA_LIBRARY('cmdline',
                      source='cmdline.c',
                      deps='''
                           talloc
                           cli_smb_common
                           samba-hostconfig
                           samba-credentials
                           CREDENTIALS_CMDLINE
                           popt
                           ''',
                      private_library=True)

    bld.SAMBA_SUBSYSTEM('CMDLINE_S3',
                        source='cmdline_s3.c',
                        deps='cmdline')

    bld.SAMBA_SUBSYSTEM('CMDLINE_S4',
                        source='cmdline_s4.c',
                        deps='cmdline')
